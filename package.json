{
  "name": "ssrp",
  "version": "0.0.1",
  "description": "The Simple Signal Replication Protocol is an application-level protocol with the lightness and speed necessary for distributed and collaborative information systems.",
  "main": "./scripts/render.mjs",
  "scripts": {
    "md:render": "node ./scripts/render.mjs",
    "git:add": "git update-index --add ./index.html",
    "watch": "chokidar \"*(SOURCE.md|scripts\\/render.mjs)\" -c \"npm run md:render\"",
    "livereload": "live-reload . --port=8888",
    "serve": "concurrently \"ssl-serve\" \"npm run livereload\"",
    "dev": "NODE_ENV=test concurrently \"npm run watch\" \"npm run serve\""
  },
  "pre-commit": "md:render, git:add",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/TimDaub/ssrp.git"
  },
  "keywords": [
    "simple",
    "signal",
    "processing",
    "transport",
    "protocol",
    "replication",
    "definition",
    "data"
  ],
  "author": "Tim Daubensch√ºtz <tim@daubenschuetz.de> (https://timdaub.github.io/)",
  "bugs": {
    "url": "https://github.com/TimDaub/ssrp/issues"
  },
  "devDependencies": {
    "@iktakahiro/markdown-it-katex": "4.0.1",
    "pre-commit": "1.2.2",
    "markdown-it": "12.0.4",
    "chokidar-cli": "3.0.0"
  },
  "dependencies": {
    "concurrently": "7.5.0",
    "live-reload": "1.1.1",
    "ssl-serve": "6.5.8"
  }
}
